<div class="container">
  <div class="row">
    <% @products.each {|product| %>
      <div class="col-sm-12 col-md-4">
        <div class="card" style="width: 7rem;">
          <%=image_tag(product.product_image.url(:med))%>
          <div class="card-block">
            <p class="card-text"><%= product.name %></p>
            <p class="card-text">$<%= '%.2f' % product.price %></p>
          </div>
        </div>
     </div>
    <%}%>
  </div>

  <div class="row">
    <% @coins.each {|coin| %>
      <div class="col-md-2">
        <%= link_to(image_tag(coin.coin_image, :class => "coin"), edit_coin_path(coin)) %>
      </div>
    <%}%>
  </div>

  <div class="row">
      <% if current_order.coin_return == nil %>
        <p>No return change at this time.</p>
          <%else%>
          <p>Returning:</p>
            <%=current_order.coin_return%>
        <%end%>
  </div>

</div>
