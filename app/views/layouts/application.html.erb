<!DOCTYPE html>
<html>
  <head>
    <title>Vending Machine Kata</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <span>
        Vending Machine
        <%if current_order.user_message.is_a? Numeric%>
          <%='%.2f' % current_order.user_message%>
          <%else%>
          <%=current_order.user_message%>
          <%end%>
          <%= button_to "Return Coins", edit_order_path(current_order), :class=> "btn btn-primary", :method => :get %>
      </span>
    </nav>
    <%= yield %>

  </body>
</html>
